<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_space">

    <ImageView
        android:id="@+id/spaceBackgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:contentDescription="nothing"
        android:fitsSystemWindows="true"
        android:scaleType="matrix" />

    <android.support.v7.widget.CardView
        android:id="@+id/spaceAboutCardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/spaceBackgroundImageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/spaceNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Space Name"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/spaceMemberCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="13,750,217 members"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#000000"
                    android:layout_weight=".1" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/dot"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/spaceProjectCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="10 projects"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#000000"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/spacePurposeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginBottom="2dp"
                android:text="The space description would go here. I got this idea from reddit but I might just modify it a bit where it's apart of the toolbar"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#000000"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>